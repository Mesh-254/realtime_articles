<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="M_Adnan">

    <!--  FavIcon  -->

    <link rel="apple-touch-icon" sizes="180x180" href="/static/images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/static/images/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/static/images/favicon/favicon-16x16.png">
    <link rel="manifest" href="/static/images/favicon/site.webmanifest">

    <title>{{ title }}</title>

    <!-- SLIDER REVOLUTION 4.x CSS SETTINGS -->
    <link rel="stylesheet" type="text/css" href="/static/css/home_css/settings.css" media="screen">

    <!-- Bootstrap Core CSS -->
    <link href="/static/css/home_css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/static/css/home_css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="/static/css/home_css/ionicons.min.css" rel="stylesheet">
    <link href="/static/css/home_css/main.css" rel="stylesheet">
    <link href="/static/css/home_css/style.css" rel="stylesheet">
    <link href="/static/css/home_css/responsive.css" rel="stylesheet">
    <link href="/static/css/home_css/flaticon.css" rel="stylesheet">

    <!-- JavaScripts -->
    <script src="{{ url_for('static', filename='js/home_js/modernizr.js') }}"></script>

    <!-- Online Fonts -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <link
        href="https://fonts.googleapis.com/css?family=Merriweather:300,400,700,900|Poppins:300,400,500,600,700|Montserrat:300,400,500,600,700,800"
        rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->


</head>

<body>

    <!-- LOADER -->
    <div id="loader">
        <div class="position-center-center">
            <div class="ldr"></div>
        </div>
    </div>

    <!-- Wrap -->
    <div id="wrap">


        <!-- Content -->
        <div id="content">
            <!--======= SUB BANNER =========-->
            <section class="sub-bnr" data-stellar-background-ratio="0.5">
                <div class="position-center-center">
                    <div class="container">
                        <h4 class="animated-heading">Realtime Articles</h4> <!-- Add class for animated heading -->
                        <p class="tagline">Unleashing the Power of Words</p> <!-- Add unique tagline -->
                        <ol class="breadcrumb">
                            <li><a href="#"></a></li> <!-- Adjust breadcrumb text -->
                        </ol>
                    </div>
                </div>
            </section>

            <header id="masthead" class="site-header" role="banner">
                <div class="double-underline"></div> <!-- Add double underline -->
                <div id="navbar" class="navbar">
                    <div class="container">
                        <h3 class="menu-toggle">
                            <button type="button" class="btn btn-primary">
                                <i class="fas fa-bars"></i> Menu
                            </button>
                        </h3> <!-- Add menu toggle icon -->
                        <nav id="site-navigation" class="navigation main-navigation" role="navigation">
                            <div class="nav-menu">
                                <ul>
                                    <li class="page_item page-item-599"><a href="{{ url_for('home.index') }}"
                                            data-wpel-link="internal">Home</a></li>
                                    <li class="page_item page-item-39"><a href="{{ url_for('home.article_pricing') }}"
                                            data-wpel-link="internal">Pricing</a></li>
                                    <li class="page_item page-item-39"><a href="{{ url_for('category.categories') }}"
                                            data-wpel-link="internal">CATEGORIES</a>

                                    </li>

                                    <li class="page_item page-item-717"><a href="{{url_for('home.contact_us')}}"
                                            data-wpel-link="internal">Contact Us</a>
                                    </li>
                                    <li class="page-item page-item-39">
                                        {# <form method="get" class="search-form" action="{{ url_for('home.index') }}">
                                            #}
                                            {# <div class="input-group mt-2">#}
                                                {# <input type="text" class="form-control" placeholder="Search" #} {#
                                                    aria-label="Search" aria-describedby="button-addon2" #} {#
                                                    id="search-input" name="q">#}
                                                {# <div class="input-group-append">#}
                                                    {# <button class="btn btn-pink" type="submit" id="button-addon2">
                                                        <i#} {# class="fa fa-search"></i>
                                                    </button>#}
                                                    {# </div>#}
                                                {# </div>#}
                                            {# </form>#}
                                        <form class="rounded position-relative">

                                            <div class="position-relative">
                                                <input class="form-control pe-5 bg-light" type="search"
                                                    placeholder="Search the blog" aria-label="Search" name="q">
                                                <button
                                                    class="btn bg-transparent border-0 px-2 py-0 position-absolute top-50 end-0 translate-middle-y"
                                                    type="submit" id="button-addon2"><i class="fa fa-search"></i>
                                                </button>
                                            </div>
                                        </form>

                                    </li>
                                </ul>
                            </div>
                        </nav><!-- #site-navigation -->
                    </div><!-- .container -->
                </div><!-- #navbar -->
            </header>


            <!-- Blog List -->
            <section class="blog-list blog-list-3 padding-top-100 padding-bottom-100">
                <div class="container-fluid px-2"> <!-- Added px-2 for left and right padding -->
                    <div class="row no-padding-col"> <!-- Apply no-padding-col class to remove column padding -->
                        {% if articles %}
                        {% for article in pages.items %}
                        <div class="col-md-4">
                            <article>
                                <div class="row">
                                    <div class="col-md-12">
                                        <a href="{{ url_for('home.article_details', id=article.id) }}">
                                            {% if article.main_image %}
                                            <img class="img-responsive"
                                                src="{{ url_for('home.get_uploaded_image', filename=article.main_image) }}"
                                                alt="Main Image">
                                            {% endif %}
                                        </a>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="post-tittle left">
                                            <a href="{{ url_for('home.article_details', id = article.id) }}"
                                                class="tittle">{{ article.main_title }}</a>
                                            <span><i class="primary-color fas fa-user"></i> by {{
                                                article.author.username }}</span>
                                            <span><i class="primary-color fas fa-calendar"></i> {{
                                                article.date_published.strftime('%B %d, %Y') }}</span>
                                            <span><i class="primary-color fas fa-tag"></i> {{ article.category.name
                                                }}</span>
                                        </div>
                                        <div class="text-left">
                                            <p class="truncate-text">{{ article.main_content|safe }}</p>
                                            <a href="{{ url_for('home.article_details', id = article.id) }}"
                                                class="red-more"> READ MORE</a>
                                        </div>
                                        <hr>
                                    </div>
                                </div>
                            </article>
                        </div>
                        {% endfor %}
                        {% endif %}
                    </div>
                </div>

                <!-- Bootstrap Pagination Links -->
                <div class="container">
                    <div class="row justify-content-center">
                        <nav aria-label="...">
                            <ul class="pagination">
                                <li class="page-item {% if not pages.has_prev %}disabled{% endif %}">
                                    <a class="page-link" href="./?page={{ pages.prev_num }}">Prev</a>
                                </li>

                                {% for page in pages.iter_pages() %}
                                <li class="page-item {% if page==pages.page %} active {% endif %}" aria-current="page">
                                    <a class="page-link" href="./?page={{ page }}">{{ page }}
                                        <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                                {% endfor %}

                                <li class="page-item {% if not pages.has_next %} disabled {% endif %}">
                                    <a class="page-link" href="./?page={{ pages.next_num }}">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <!--End of Bootstrap Pagination Links -->


            </section>
        </div>

        <!-- FOOTER -->
        <footer>
            <div class="container">
                <div class="row">
                    <!-- ABOUT Location -->
                    <div class="col-md-4">
                        <h6>Realtime Articles</h6>
                        <div class="about-footer"><img class="margin-bottom-30" src="#" alt="">
                            <p><i class="primary-color fas fa-phone-alt"></i> 1.800.123.456789 <br>
                                1.800.123.456789</p>
                            <p><i class="primary-color fas fa-envelope"></i> info@realtimeArticles.com </p>
                        </div>
                    </div>

                    <!-- HELPFUL LINKS -->
                    <div class="col-md-3">
                        <h6>Links</h6>
                        <ul class="link">
			    
                            <li><a href="#."> Blogs </a></li>
                            <li><a href="{{ url_for('user.login') }}"> Admin</a></li>
                        </ul>
                    </div>

                    <!-- HELPFUL LINKS -->
                    <div class="col-md-3">
                        <h6>Social Info</h6>
                        <ul class="link">
                            <li><a href="#."> Facebook</a></li>
                            <li><a href="#."> Twitter</a></li>
                            <li><a href="#.">Instagram</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Rights -->
            <div class="rights">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <p style="text-align: center;">© 2024 RealtimeArticles All right reserved. <a
                                    href="https://meshack-portfolio.framer.ai/portfolio3">wolftech</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="{{ url_for('static', filename='/js/home_js/jquery-1.12.4.min.js') }}"></script>
    <script src="{{ url_for('static', filename='/js/home_js/popper.min.js') }}"></script>
    <script src="{{ url_for('static', filename='/js/home_js/bootstrap.min.js') }}"></script>
    <script src="{{ url_for('static', filename='/js/home_js/own-menu.js') }}"></script>
    <script src="{{ url_for('static', filename='/js/home_js/jquery.lighter.js') }}"></script>
    <script src="{{ url_for('static', filename='/js/home_js/jquery.magnific-popup.min.js') }}"></script>
    <script src="{{ url_for('static', filename='/js/home_js/owl.carousel.min.js') }}"></script>
    <script src="{{ url_for('static', filename='/js/home_js/main.js') }}"></script>


    <script>
        // JavaScript to toggle the active class on menu toggle click
        document.addEventListener('DOMContentLoaded', function () {
            const menuToggle = document.querySelector('.menu-toggle');
            const navMenu = document.querySelector('.nav-menu');

            menuToggle.addEventListener('click', function () {
                navMenu.classList.toggle('active');
            });
        });
    </script>


</body>

</html>
